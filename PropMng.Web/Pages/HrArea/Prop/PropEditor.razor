<EditForm Model="Item" OnValidSubmit="SaveItem" class="form-horizontal">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <label class="control-label col-sm-2">Commercial Name</label>
        <div class="col-sm-8">
            <InputText class="form-control" @bind-Value="Item.CmName" placeholder="Commercial Name" />
            <ValidationMessage For="@(()=>Item.CmName)" />
        </div> 
         <div class="col-sm-2">
             @(Item.Id==0?"code..":Item.Code)
        </div>
    </div>
        <div class="form-group row"> 
        <label class="control-label col-sm-2">Cr Number</label>
        <div class="col-sm-4">
              <InputText class="form-control" @bind-Value="Item.CrNum" placeholder="Cr Number" />
            <ValidationMessage For="@(()=>Item.CrNum)" />
        </div>   
         <label class="control-label col-sm-2">Tax Reg Num</label>
        <div class="col-sm-4">
           <InputText class="form-control" @bind-Value="Item.TaxRegNum" placeholder="Tax Registration Number" />
            <ValidationMessage For="@(()=>Item.TaxRegNum)" />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2">Address</label>
        <div class="col-sm-10">
            <InputTextArea class="form-control" @bind-Value="Item.Address" placeholder="Address" />
            <ValidationMessage For="@(()=>Item.Address)" />
        </div>
    </div>
      
    <div class="form-group row">
        <div class="col-sm text-left"> <a class="btn btn-secondary btn-lg" @onclick="CancelItem">Cancel and Back</a></div>
        <div class="col-sm text-right">  <button type="submit" class="btn btn-info btn-lg">Save Item Data</button></div>
    </div>
</EditForm>

