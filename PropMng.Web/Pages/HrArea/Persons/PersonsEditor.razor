<EditForm Model="Item" OnValidSubmit="SaveItem" class="form-horizontal">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <label class="control-label col-sm-2">First Name</label>
        <div class="col-sm-4">
            <InputText class="form-control" @bind-Value="Item.FirstName" placeholder="First Name" />
            <ValidationMessage For="@(()=>Item.FirstName)" />
        </div>
        <label class="control-label col-sm-2">Last Name</label>
        <div class="col-sm-4">
            <InputText class="form-control" @bind-Value="Item.LastName" placeholder="Last Name" />
            <ValidationMessage For="@(()=>Item.LastName)" />
        </div>

    </div>
    <div class="form-group row">
        <label class="control-label col-sm-2">Id Number</label>
        <div class="col-sm-4">
            <InputText class="form-control" @bind-Value="Item.IdNum" placeholder="Id Number" />
            <ValidationMessage For="@(()=>Item.IdNum)" />
        </div>
        <label class="control-label col-sm-2">Phone Number</label>
        <div class="col-sm-4">
            <InputText class="form-control" @bind-Value="Item.PhoneNum" placeholder="Phone Number" />
            <ValidationMessage For="@(()=>Item.PhoneNum)" />
        </div>
    </div>
   
    <div class="form-group row">
        <label class="control-label col-sm-2">Gender </label>
        <div class="col-sm-4">
            <label class="form-check-label">
                &nbsp; &nbsp;  <input type="checkbox" checked="@Item.IsMale" @onchange="@(()=>Item.IsMale=!Item.IsMale)" class="form-check-input" value=""> @(Item.IsMale?"Male":"Female")
            </label>
        </div>
        <label class="control-label col-sm-2">Birth Date</label>
        <div class="col-sm-4">
            <InputDate class="form-control" @bind-Value="Item.BirthDate" />
            <ValidationMessage For="@(()=>Item.BirthDate)" />
        </div>
    </div>

     <div class="form-group row">
        <label class="control-label col-sm-2">Is Active</label>
        <div class="col-sm-4">

            <label class="form-check-label">
                &nbsp; &nbsp;  <input type="checkbox" checked="@Item.IsActive" @onchange="@(()=>Item.IsActive=!Item.IsActive)" class="form-check-input" value=""> @(Item.IsActive?"":"Not") Active
            </label>

        </div>
        <label class="control-label col-sm-2">Is Corporation</label>
        <div class="col-sm-4">
            &nbsp; &nbsp;
            <label class="form-check-label">
                <input type="checkbox" checked="@Item.IsCorp" @onchange="@(()=>Item.IsCorp=!Item.IsCorp)" class="form-check-input" value=""> @(Item.IsCorp?"":"Not") Corporation
            </label>
        </div>
    </div>
    @if (Item.IsCorp)
    {
        <div class="form-group row">
            <label class="control-label col-sm-2">Corporation Name</label>
            <div class="col-sm-4">
                <InputText class="form-control" @bind-Value="Item.CrName" placeholder="Corporation Name" />
                <ValidationMessage For="@(()=>Item.CrName)" />
            </div>
            <label class="control-label col-sm-2">CR Num</label>
            <div class="col-sm-4">
                <InputText class="form-control" @bind-Value="Item.CrNum" placeholder="CR Num" />
                <ValidationMessage For="@(()=>Item.CrNum)" />
            </div>
        </div>
    }

    <div class="form-group row">
        <label class="control-label col-sm-2">Details </label>
        <div class="col-sm-10">
            <InputTextArea class="form-control" @bind-Value="Item.Details" placeholder="Details" />
        </div>

    </div>
    <div class="form-group row">
        <div class="col-sm text-left"> <a class="btn btn-secondary btn-lg" @onclick="CancelItem">Cancel and Back</a></div>
        <div class="col-sm text-right">  <button type="submit" class="btn btn-info btn-lg">Save Item Data</button></div>
    </div>
</EditForm>

